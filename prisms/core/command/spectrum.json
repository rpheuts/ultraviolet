{
  "name": "command",
  "version": "0.1.0",
  "namespace": "core",
  "description": "Command line argument processing prism",
  "tags": ["utility", "core"],
  "wavelengths": [
    {
      "frequency": "parse",
      "description": "Parse command line arguments according to a schema",
      "input": {
        "type": "object",
        "properties": {
          "schema": {
            "description": "JSON Schema for the command's arguments",
            "type": "object"
          },
          "args": {
            "description": "Array of command line arguments to parse",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["schema", "args"]
      },
      "output": {
        "description": "Processed arguments as structured data",
        "type": "object"
      }
    },
    {
      "frequency": "validate",
      "description": "Validate structured input against a schema",
      "input": {
        "type": "object",
        "properties": {
          "schema": {
            "description": "JSON Schema for validation",
            "type": "object" 
          },
          "input": {
            "description": "Input to validate against the schema",
            "type": "object"
          }
        },
        "required": ["schema", "input"]
      },
      "output": {
        "type": "object",
        "properties": {
          "valid": {
            "type": "boolean",
            "description": "Whether the input is valid according to the schema"
          },
          "errors": {
            "type": "array",
            "description": "Validation errors (if any)",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["valid"]
      }
    },
    {
      "frequency": "describe",
      "description": "Generate help text for a command",
      "input": {
        "type": "object",
        "properties": {
          "schema": {
            "description": "JSON Schema for the command",
            "type": "object"
          },
          "command_name": {
            "description": "Name of the command for help text",
            "type": "string"
          }
        },
        "required": ["schema"]
      },
      "output": {
        "type": "object",
        "properties": {
          "usage": {
            "type": "string",
            "description": "Usage string for the command"
          },
          "description": {
            "type": "string",
            "description": "Description of the command"
          },
          "options": {
            "type": "array",
            "description": "Available options/flags for the command",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the option"
                },
                "description": {
                  "type": "string",
                  "description": "Description of the option"
                },
                "type": {
                  "type": "string",
                  "description": "Type of the option (string, number, boolean, etc.)"
                },
                "required": {
                  "type": "boolean",
                  "description": "Whether the option is required"
                }
              }
            }
          }
        },
        "required": ["usage", "options"]
      }
    }
  ],
  "refractions": []
}
